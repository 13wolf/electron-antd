{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "strict": true,
    "jsx": "react",
    "importHelpers": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "sourceMap": false,
    "locale": "zh-CN",
    "baseUrl": ".",
    "lib": ["esnext", "dom"],
    "types": ["webpack-env", "node"],
    "paths": {
      "@/*": ["app/*"],
      "@root/*": ["*"]
    }
  },
  "include": ["typings", "app"],
  "exclude": ["node_modules", "build", "dist", "release", "assets"]
}
